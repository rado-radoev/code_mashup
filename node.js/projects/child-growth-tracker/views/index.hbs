<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>



<div class="row">
    <div class="col-8 align-self-left">
        <form id="data-entry-form" >
            <div class="form-group">
                <div class="row mt-2" id='baby-name-birthdate-form-entry'>
                    <div class="col-3">
                        <label for="exampleInputEmail1">Child Name</label>
                        <input type="text" class="form-control" id="babyInputName" aria-describedby="babyNameHelp" placeholder="Enter baby's name">
                        <small id="babyNameHelp" class="form-text text-muted">Baby's name</small>
                    </div>
                    <div class="col-3">    
                        <label for="exampleInputEmail1">Birthdate</label>
                        <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
                            <input type="text" placeholder={{currDate}} class="form-control datetimepicker-input" data-target="#datetimepicker4"/>
                            <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        <small id="babyBirthdateHelp" class="form-text text-muted">Baby's birthdate</small>
                    </div>
                </div>
                <div class="row mt-2" >
                    <div class="col-3">
                        <label for="Height">Height</label>
                        <input type="number" min='0' max='100' step='.1' class="form-control" id="allownumericwithdecimal" aria-describedby="heightHelp" placeholder="Enter height">
                        <small id="heightHelp" class="form-text text-muted">Kid's height</small>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                        <label for="Weight">Weight</label>
                        <input type="number" class="form-control" min='0' max='100' step='.1' id="allownumericwithdecimal" placeholder="Enter weight" aria-describedby="weightHelp">
                        <small id="weightHelp" class="form-text text-muted">Kid's weight</small>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col">
                        <div id="height_chart"></div>
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col">
                        <div id="weight_chart"></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-4 ">
        <img src="/images/baby2.png" class="img-responsive" alt="Responsive image">
    </div>
</div>



